pipeline {
    agent any
    stages {
        stage ("1. update the syste"){
            steps {
                sh "apt-get update -y"
                sh "yum update -y"
            }
        }

        stage ("2. print memory and disk"){
            steps{
                sh "ls"
                sh "ls -a"
                sh "lsblk"
                sh "free -m"
                sh "touch test.txt"
                sh "df -h"
                sh "du -ksh"
                sh "touch txt.txt"
            }
        }
    
    }
}
